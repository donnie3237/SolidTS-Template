---
export interface Props {

items: Array<{
	title: string,
	link: string,
	price: number
}>;
}

const { items } = Astro.props as Props;
---

<div class="cards">
	{items.map((item) => (
	 <div class="card">
		<div class="img"></div>
		<div class="link">buy now!!</div>
		<div class="text"><p>{item.title}</p><p>{item.price}</p></div>
	</div>
	))}
</div>

<style lang="scss">
	.cards{
		display: flex;
		width: calc(100vw - 20px);
		margin-left: 10px;
		flex-wrap: wrap;
		justify-content: center;
		.card{
			background-color: rgb(227, 226, 225);
			transition: all 0.5s;
			margin: 15px;
			border-radius: 10px;
			width: 300px;
			position: relative;
			height: 400px;
			box-shadow: 0 0 5px rgb(169, 166, 166);
			.link{
				width: 100%;
				height: 40px;
				background-color: rgb(58, 15, 158);
				position: absolute;
				bottom: 80px;
				color: white;
				justify-content: center;
				align-items: center;
				display: none;
			}
			.text{
				background-color: rgb(255, 255, 255);
				position: absolute;
				bottom: 0;
				display: flex;
				align-items: center;
				justify-content: space-around;
				width: 100%;
				height: 80px;
				border-bottom-left-radius: 10px;
				border-bottom-right-radius: 10px;
			}
			&:hover{
				background-color: rgb(91, 92, 91);
				.text{
					text-decoration:underline;
				}
				.link{
					display: flex;
				}
			}
		}
	}
</style>